@model MvcApplication.Models.Master

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Master</h4>
<hr />

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="MasterName" class="control-label"></label>
                    <input asp-for="MasterName" class="form-control" />
                    <span asp-validation-for="MasterName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}

else
{
    <h2 class="bg-danger mb-1 p-2 text-white">Access Denied</h2>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">OK</a>
}
