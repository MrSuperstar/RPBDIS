@model MvcApplication.Models.Master

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Master</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MasterName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MasterName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MasterId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}

else
{
    <h2 class="bg-danger mb-1 p-2 text-white">Access Denied</h2>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">OK</a>
}