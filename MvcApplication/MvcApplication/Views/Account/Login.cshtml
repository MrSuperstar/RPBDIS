@model MvcApplication.ViewModels.LoginViewModel

@if (!User.Identity.IsAuthenticated)
{
    <h2>Вход в приложение</h2>
    <form method="post" asp-controller="Account" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="RememberMe"></label><br />
            <input asp-for="RememberMe" />
        </div>
        <div>
            <input type="submit" value="Войти" />
        </div>
    </form>
}
else
{
<h2 class="bg-success mb-1 p-2 text-white">You are already authorized</h2>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">OK</a>
}

